<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="86dp">

    <ImageView android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_centerVertical="true"
               android:id="@+id/thumbnail_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/thumbnail_image"
        android:layout_toLeftOf="@+id/active_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="16dp"
            tools:text="Name" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/recycle_qty"
        android:layout_width="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/abc_secondary_text_material_dark"
        tools:text="QTY"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/recycle_unit"
        android:layout_width="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/abc_secondary_text_material_dark"
        tools:text="Unit"/>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/recycle_day"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/abc_secondary_text_material_dark"
            tools:text="Day"/>

            <TextView
                android:id="@+id/recycle_repeat_no"
                android:layout_weight=".5"
                android:gravity="end"
                android:layout_width="match_parent"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/abc_secondary_text_material_dark"
                tools:text="Repeat"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_height="wrap_content"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:src="@drawable/ic_notifications_off_grey600_24dp"
               android:layout_centerVertical="true"
               android:id="@+id/active_image"/>

</RelativeLayout>